@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <!-- Aqui você pode colocar o logo do sistema -->
                <i class="bi bi-headset text-primary" style="font-size: 3rem;"></i>
                <h2 class="fw-bold text-primary mt-3">AjudAI</h2>
                <p class="text-muted mb-0">Acesse sua conta para continuar</p>
            </div>

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg rounded-3" placeholder="Digite seu email" autofocus />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Senha" class="form-label fw-semibold">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control form-control-lg rounded-3" placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 shadow-sm">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Entrar
                </button>

                @if (!string.IsNullOrEmpty(Model?.Mensagem))
                {
                    <div class="alert alert-danger mt-3 text-center rounded-3" role="alert">
                        @Model.Mensagem
                    </div>
                }
            </form>

            <hr class="my-4" />

            <p class="text-center text-muted mb-0">
                Não tem conta?
                <a asp-page="/Usuarios/Create" class="fw-semibold text-decoration-none text-primary">
                    Cadastre-se aqui
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
